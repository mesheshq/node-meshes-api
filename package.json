{
  "name": "@mesheshq/api",
  "version": "1.0.0",
  "description": "Meshes API client for management APIs.",
  "author": "Todd Schlomer <todd@meshes.io> (https://meshes.io)",
  "license": "MIT",
  "type": "module",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/mjs/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/mjs/index.js",
      "require": "./dist/cjs/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mesheshq/node-meshes-api.git"
  },
  "bugs": {
    "url": "https://github.com/mesheshq/node-meshes-api/issues"
  },
  "homepage": "https://github.com/mesheshq/node-meshes-api#readme",
  "scripts": {
    "build": "rm -rf dist && node esbuild.js && tsc",
    "watch": "npm run build -- --watch src",
    "prepublishOnly": "npm run build",
    "test": "vitest run --testTimeout 10000",
    "test:watch": "vitest watch --testTimeout 10000",
    "test:ci": "export CI=true && vitest run --coverage",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "jose": "^6.1.3"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "3.2.4",
    "esbuild": "^0.27.2",
    "esbuild-node-externals": "^1.20.1",
    "prettier": "^3.2.5",
    "typescript": "^5.1.6",
    "vitest": "3.2.4"
  },
  "keywords": [
    "Meshes",
    "Meshes API",
    "Meshes API Client"
  ],
  "engines": {
    "node": ">=v18.20.8"
  }
}
